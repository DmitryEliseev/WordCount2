<Window x:Class="CountWord2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="656" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Button Content="Выбрать" Name="ChooseFile" HorizontalAlignment="Left" Margin="135,10,0,0" VerticalAlignment="Top" Width="120" Height="25" Click="ChooseFile_Click"/>
        <TextBox Name="MainTextBox" HorizontalAlignment="Left" Height="263" Margin="10,49,0,10.4" VerticalAlignment="Center" Width="622" IsReadOnly="True" TextOptions.TextFormattingMode="Display" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" BorderThickness="1"/>
        <Button Content="Посчитать слова" Name="CountWords" HorizontalAlignment="Left" Margin="513,10,0,0" VerticalAlignment="Top" Width="120" Height="25" Click="CountWords_Click"/>
        <Button Content="Посмотреть" Name ="ChooseContent" HorizontalAlignment="Left" Margin="387,10,0,0" VerticalAlignment="Top" Width="120" Height="25" Click="ChooseContent_Click"/>
        <ComboBox Name="comboBoxTypeViewText" HorizontalAlignment="Left" Margin="261,12,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox Name="comboBoxTypeOpenFile" HorizontalAlignment="Left" Margin="9,12,0,0" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
